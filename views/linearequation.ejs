  <script type="text/javascript">
    let equationNum = 2;

    function addEquation() {
      equationNum++;
      let tempInput = '';
      document.getElementById("equationsInput").innerHTML = "";
      for (let i = 1; i <= equationNum; i++) {
        tempInput += '<div class="row justify-content-center" id="linear' + i + '"><div class="col-sm-9 col-12"><div class="input-group ">' + '<h5>Eq.' + i + ' : </h5>';
        for (let j = 1; j <= equationNum; j++) {
          if (j == equationNum) {
            tempInput += '<input type="text" class="form-control form-control-sm rounded  width2 " id="equa' + i + 'X' + j + '" name="equa' + i + 'X' + j + '" >';
            tempInput += '<h5>x' + j + '</h5>';
          } else {
            tempInput += '<input type="text" class="form-control form-control-sm rounded  width2 " id="equa' + i + 'X' + j + '" name="equa' + i + 'X' + j + '" >';
            tempInput += '<h5>x' + j + '+</h5>';
          }
        }
        tempInput += '<h5>&nbsp =</h5><input type="text" class="form-control form-control-sm rounded width2 " id="equa' + i + 'Right" name="equa' + i + 'Right"></div></div></div>';

      }
      $('#equationsInput').append(tempInput);
    }

    function delEquation() {
      if (equationNum > 2) {
        equationNum--;
        let tempInput = '';
        document.getElementById("equationsInput").innerHTML = "";
        for (let i = 1; i <= equationNum; i++) {
          tempInput += '<div class="row justify-content-center" id="linear' + i + '"><div class="col-sm-9 col-12"><div class="input-group ">' + '<h5>Eq.' + i + ' : </h5>';
          for (let j = 1; j <= equationNum; j++) {
            if (j == equationNum) {
              tempInput += '<input type="text" class="form-control form-control-sm rounded  width2 " id="equa' + i + 'X' + j + '" name="equa' + i + 'X' + j + '" >';
              tempInput += '<h5>x' + j + '</h5>';
            } else {
              tempInput += '<input type="text" class="form-control form-control-sm rounded  width2 " id="equa' + i + 'X' + j + '" name="equa' + i + 'X' + j + '" >';
              tempInput += '<h5>x' + j + '+</h5>';
            }
          }
          tempInput += '<h5>&nbsp =</h5><input type="text" class="form-control form-control-sm rounded width2 " id="equa' + i + 'Right" name="equa' + i + 'Right"></div></div></div>'

        }
        $('#equationsInput').append(tempInput);
      }
    }

    function calculateEquations() {
      let matrixEquationToSend = [];
      let matrixRightSideToSend = [];
      let allowToCalculate = true;
      for (let i = 1; i <= equationNum; i++) {
        let arrayEquation = [];
        for (let j = 1; j <= equationNum; j++) {
          let inputId = "equa" + i + "X" + j;
          let inputValue = document.getElementById(inputId).value;
          console.log(inputId);
          console.log(inputValue);
          if ($.isNumeric(inputValue)) {
            arrayEquation.push(parseFloat(inputValue));
            console.log("Success push" + "Id " + inputId + ":" + inputValue);
          } else {
            console.log("Not allowToCalculate B/C inputValue is !isNumeric");
            allowToCalculate = false;
          }
        }
        if (allowToCalculate) {
          let rightValue = document.getElementById("equa" + i + "Right").value;
          if ($.isNumeric(rightValue)) {
            matrixEquationToSend.push(arrayEquation);
            matrixRightSideToSend.push(rightValue);
            console.log(arrayEquation);
          } else {
            console.log("Not allowToCalculate B/C RightValue is !isNumeric ");
            allowToCalculate = false;
          }
        }
      }
      // send or not send to server
      if (allowToCalculate) {
        console.log("Sendding to server..");
        console.log("matrixEquationToSend:");
        console.log(matrixEquationToSend);
        console.log("matrixRightSideToSend")
        console.log(matrixRightSideToSend);
        $("#errorMsg").remove();
        $("#h1Result").remove();
        $("#toShowSol").remove();
        // Sendding
        $.post("linearequation/calculatelinearequation", {
            equations: matrixEquationToSend,
            rightEquation: matrixRightSideToSend
          },
          function(data, status) {
            let solution = data.solution;
            console.log("Solution");
            console.log(solution);
            let toShowSol = [];
            for (let i = 0; i < data.solution.length; i++) {
              toShowSol.push("x" + (i + 1) + " = " + data.solution[i]);
            }

            $('#equationsInput').append('<h2 id="h1Result">Result</h1>');
            $('#equationsInput').append('<h4 id="toShowSol">' + toShowSol + '</h4>');

          });
      } else {
        console.log("Not Sendding to server");
        $("#errorMsg").remove();
        $('#equationsInput').append('<h6 id="errorMsg">Error some coefficients is not a number.</h6>');
      }
    }
  </script>
