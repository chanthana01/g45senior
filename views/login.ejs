<body class="bgColor2">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 mb-5">
        <h1 class="display-4 whiteColor">Scientific Computing CSS226</h1>
      </div>
    </div>
  </div>
  <div class="container">
    <form class="form-row justify-content-center" method="POST" action="/login">
      <div class=" col-sm-4 bgColor1 p-4 rounded">
        <p class="h4"><strong>Sign In</strong></p>
        <br>
        <div class="form-group">
          <label for="studentId">Student Id</label>
          <input type="text" class="form-control" id="studentId" name="studentId" placeholder="Enter student Id">
          <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
        </div>
        <div class="form-group">
          <label for="inputPassword">Password</label>
          <input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-primary">Log in</button>
    </form>
    <div class="container">

      <div class="row">
        <div class="col-12 ">
          <small class="text-muted">Don't have an account?</small>
        </div>
        <div class="col-12">
          <a href="register">Register</a>
        </div>
        <div class="col-12">
          <br>
          <a href="forgot"><small>Forgot password?</small></a>
        </div>
      </div>
    </div>
  </div>
  </div>


  <footer class="mt-5 container-fluid fixBottom">
